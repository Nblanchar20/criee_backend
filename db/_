"use strict";
module.exports = (sequelize, DataTypes) => {
  const Tabla = sequelize.define(
    "Tabla",
    {
      id: {
        type: DataTypes.BIGINT(20),
        primaryKey: true,
        autoIncrement: true,
      },
      item: {
        type: DataTypes.DECIMAL(10,2),
        allowNull: false,
      },
      estado: {
        type: DataTypes.TINYINT(4),
        defaultValue: 1,
        allowNull: false,
      },
      id_item: {
        type: DataTypes.BIGINT(20),
        allowNull: false,
      }
    },
    {
      tableName: "Nombre",
      timestamps: false,
    }
  );

  Tabla.associate = function (models) {
    Tabla.belongsTo(models.NombreModelo, {
      foreignKey: "id_item",
      as: "NombreModelo",
    });
  };

  return Tabla;
};
